<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleTabbedApp.Mvvm.Pages.SteadyPage"
             Title="SteadyPage">
    <VerticalStackLayout>
        <Label 
            Text="... Steady ..."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="{Binding PushTestPageCommand.Text}" Command="{Binding PushTestPageCommand}"/>
        <Button Text="{Binding SwapToReadyPageCommand.Text}" Command="{Binding SwapToReadyPageCommand}"/>
        <Button Text="{Binding SwapToGoPageCommand.Text}" Command="{Binding SwapToGoPageCommand}"/>

    </VerticalStackLayout>
</ContentPage>