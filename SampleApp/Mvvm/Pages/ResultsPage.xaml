<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleApp.Mvvm.Pages.ResultsPage"
             Title="ResultsPage">
    <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="Results Page!"/>
        <Label Text="{Binding DisplayText}"/>
        <Button Command="{Binding StartAgainCommand}" Text="{Binding StartAgainCommand.Text}"/>
    </VerticalStackLayout>
</ContentPage>